<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="groupon.edanpossey.groupon1.Client.PresentationLayer.EditUser">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameText"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="25dp"
        android:width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="User Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passText"
        android:layout_marginTop="33dp"
        android:width="200dp"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:hint="Password"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneText"
        android:layout_marginTop="33dp"
        android:width="200dp"
        android:layout_below="@+id/passText"
        android:layout_alignLeft="@+id/passText"
        android:layout_alignStart="@+id/passText"
        android:hint="Phone Number"
        android:phoneNumber="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mailText"
        android:layout_marginTop="35dp"
        android:width="200dp"
        android:layout_below="@+id/phoneText"
        android:layout_alignLeft="@+id/phoneText"
        android:layout_alignStart="@+id/phoneText"
        android:hint="E-mail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/editButton"
        android:layout_marginBottom="35dp"
        android:onClick="editUser_ButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mailText"
        android:layout_alignStart="@+id/mailText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deleteButton"
        android:layout_alignTop="@+id/editButton"
        android:layout_toRightOf="@+id/editButton"
        android:layout_toEndOf="@+id/editButton"
        android:layout_marginLeft="66dp"
        android:layout_marginStart="66dp"
        android:onClick="deleteButton_ButtonClick" />
</RelativeLayout>
