<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="groupon.edanpossey.groupon1.User_activity"
    android:background="@color/material_deep_teal_200">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view coupon"
        android:id="@+id/viewCoupon_bt"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="27dp"
        android:width="120dp"
        android:onClick="viewCoupon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/searchCoupon_bt"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/viewCoupon_bt"
        android:layout_alignRight="@+id/viewCoupon_bt"
        android:layout_alignEnd="@+id/viewCoupon_bt"
        android:width="120dp"
        android:onClick="searchCoupon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view orders"
        android:id="@+id/viewOrders_bt"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/searchCoupon_bt"
        android:layout_alignRight="@+id/searchCoupon_bt"
        android:layout_alignEnd="@+id/searchCoupon_bt"
        android:width="120dp"
        android:onClick="viewOrders" />
</RelativeLayout>
