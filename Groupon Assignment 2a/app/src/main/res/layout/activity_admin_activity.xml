<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="groupon.edanpossey.groupon1.Client.PresentationLayer.Admin_activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Catalog Items"
        android:id="@+id/searchCatalogButton"
        android:width="120dp"
        android:onClick="searchCatalog_ButtonClick"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pending Catalog Items"
        android:id="@+id/viewPendingCatalogItemsButton"
        android:width="120dp"
        android:onClick="viewPendingCatalogItems_ButtonClick"
        android:layout_below="@+id/searchCatalogButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_toStartOf="@+id/addCatalogItemButton"
        android:layout_toLeftOf="@+id/addCatalogItemButton"
        android:layout_alignRight="@+id/searchCatalogButton"
        android:layout_alignEnd="@+id/searchCatalogButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/categoriesTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/searchCatalogButton"
        android:layout_toEndOf="@+id/searchCatalogButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/categoriesTextView"
        android:layout_alignTop="@+id/categoriesTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/searchCatalogButton"
        android:layout_alignEnd="@+id/searchCatalogButton"
        android:textStyle="bold|italic"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Radius"
        android:id="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignBottom="@+id/radiusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/radiusTextView"
        android:layout_toStartOf="@+id/radiusTextView"
        android:layout_below="@+id/categoriesTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/radiusTextView"
        android:layout_below="@+id/categoriesTextView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City"
        android:id="@+id/textView8"
        android:gravity="center_vertical|center_horizontal"
        android:layout_toLeftOf="@+id/cityTextView"
        android:layout_alignBottom="@+id/cityTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityTextView"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/radiusTextView"
        android:layout_alignEnd="@+id/radiusTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Businesses"
        android:id="@+id/searchBusinessesButton"
        android:width="120dp"
        android:layout_toRightOf="@+id/searchCatalogButton"
        android:layout_toEndOf="@+id/searchCatalogButton"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignBottom="@+id/searchCatalogButton"
        android:layout_alignTop="@+id/searchCatalogButton"
        android:onClick="searchBusinesses_ButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Business"
        android:id="@+id/addBusinessButton"
        android:onClick="addBusiness_ButtonClick"
        android:layout_alignTop="@+id/viewPendingCatalogItemsButton"
        android:layout_alignRight="@+id/searchBusinessesButton"
        android:layout_alignEnd="@+id/searchBusinessesButton"
        android:layout_alignBottom="@+id/viewPendingCatalogItemsButton" />
</RelativeLayout>
